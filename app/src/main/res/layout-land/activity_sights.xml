<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SightsActivity">

    <TextView
        android:id="@+id/balaton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/def_margin"
        android:fontFamily="casual"
        android:text="@string/balaton"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/festetics"
        android:layout_width="137dp"
        android:layout_height="102dp"
        android:layout_marginStart="@dimen/def_margin"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balaton"
        app:srcCompat="@drawable/festetics" />

    <ImageView
        android:id="@+id/szigliget"
        android:layout_width="137dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/def_margin"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/festetics"
        app:srcCompat="@drawable/szigliget" />

    <ImageView
        android:id="@+id/badacsony"
        android:layout_width="137dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/def_margin"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="@dimen/def_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balaton"
        app:srcCompat="@drawable/badacsony" />

    <TextView
        android:id="@+id/festeticsLeiras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/def_margin"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="@dimen/def_margin"
        android:text="Ez itt a festetics kastély tesókám."
        app:layout_constraintStart_toEndOf="@+id/festetics"
        app:layout_constraintTop_toTopOf="@+id/festetics" />

    <TextView
        android:id="@+id/szigligetLeiras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/def_margin"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="@dimen/def_margin"
        android:text="És végül a szigligeti vár."
        app:layout_constraintStart_toEndOf="@+id/szigliget"
        app:layout_constraintTop_toTopOf="@+id/szigliget" />

    <TextView
        android:id="@+id/badacsonyLeiras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/def_margin"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/def_margin"
        android:text="Ez meg itt a badacsony."
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/badacsony" />


</androidx.constraintlayout.widget.ConstraintLayout>